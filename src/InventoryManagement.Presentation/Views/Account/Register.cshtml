@{
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
    @using InventoryManagement.Application.Dto.Identity
}
@model RegistrationRequest;

<div class="register-box-body">
    <p class="login-box-msg">Register a new membership</p>

    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group has-feedback">
            <input type="text" class="form-control" placeholder="Full name" asp-for="Name">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="email" class="form-control" placeholder="Email" asp-for="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="text" class="form-control" placeholder="Username" asp-for="UserName">
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="Password" asp-for="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
            </div>
            <!-- /.col -->
        </div>
    </form>

    <a asp-controller="Account" asp-action="Login" class="text-center">I already have a membership</a>
</div>