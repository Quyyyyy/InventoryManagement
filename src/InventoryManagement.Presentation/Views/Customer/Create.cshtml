@{
    Layout = "/Views/Shared/_Layout.cshtml";
    @using InventoryManagement.Application.Dto.Customers
}

@model CreateCustomerDto;

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customer
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a asp-controller="Customer" asp-action="Index">Customers</a></li>
        <li class="active class=" bg-info"">Add</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row alert">
        <!-- left column -->
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-success btn-flat" style="text-decoration:none"><i class="fa fa-list"></i> List</a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form asp-action="Create" method="post" class="form-horizontal">
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 ">Customer Name</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3" placeholder="Category Name" asp-for="CustomerName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Customer Email</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3" placeholder="Category Email" asp-for="CustomerEmail">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Customer Phone</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3" placeholder="Category Phone" asp-for="CustomerPhone">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Location</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3" placeholder="Location" asp-for="Location">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Bussines</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3" placeholder="Bussines" asp-for="business">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 "></div>
                            <div class="col-sm-9">
                                <button type="submit" class="btn btn-info btn-flat pull-left">Submit</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer"></div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>
