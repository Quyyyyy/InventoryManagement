@{
    Layout = "/Views/Shared/_Layout.cshtml";
    @using InventoryManagement.Application.Dto.Identity
}

@model ViewAddEmployee;

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Users
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Employee" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a asp-controller="Employee" asp-action="Index">Users</a></li>
        <li class="active class=" bg-info"">Add</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row alert">
        <!-- left column -->
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-success btn-flat" style="text-decoration:none"><i class="fa fa-list"></i> List</a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form asp-action="Create" method="post" class="form-horizontal" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 ">Code</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3" asp-for="EmployeeDto.EmployeeCode">
                            </div>
                            <span asp-validation-for="EmployeeDto.EmployeeCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Name</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3" asp-for="EmployeeDto.EmployeeName">
                            </div>
                            <span asp-validation-for="EmployeeDto.EmployeeName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Email</label>

                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="inputPassword3" asp-for="EmployeeDto.Email">
                            </div>
                            <span asp-validation-for="EmployeeDto.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Phone</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3" asp-for="EmployeeDto.PhoneNumber">
                            </div>
                            <span asp-validation-for="EmployeeDto.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Position</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3"  asp-for="EmployeeDto.Position">
                            </div>
                            <span asp-validation-for="EmployeeDto.Position" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Social ID</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="EmployeeDto.CCCD">
                            </div>
                            <span asp-validation-for="EmployeeDto.CCCD" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Role</label>

                            <div class="col-sm-9">
                                <select asp-for="EmployeeDto.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                            </div>
                            <span asp-validation-for="EmployeeDto.RoleId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Image</label>

                            <div class="col-sm-9">
                                <input type="file" asp-for="Image" />
                            </div>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">UserName</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="EmployeeDto.UserName">
                            </div>
                            <span asp-validation-for="EmployeeDto.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Password</label>

                            <div class="col-sm-9">
                                <input type="password" class="form-control" asp-for="EmployeeDto.Password">
                            </div>
                            <span asp-validation-for="EmployeeDto.Password" class="text-danger"></span>
                        </div>
                        
                        
                        <div class="form-group">
                            <div class="col-sm-3 "></div>
                            <div class="col-sm-9">
                                <button type="submit" class="btn btn-info btn-flat pull-left">Submit</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer"></div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>

