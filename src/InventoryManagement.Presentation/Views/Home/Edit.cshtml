@{
    Layout = "/Views/Shared/_Layout.cshtml";
    @using InventoryManagement.Application.Dto.Identity
}

@model CreateEmployeeDto;

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Profile
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a asp-controller="Home" asp-action="Index">Profile</a></li>
        <li class="active class=" bg-info"">Add</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row alert">
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                
                <form asp-action="Edit" method="post" class="form-horizontal" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    
                    <input type="hidden" asp-for="Id" />
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 ">Code</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3" asp-for="EmployeeCode">
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Name</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3" asp-for="EmployeeName">
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Email</label>

                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="inputPassword3" asp-for="Email">
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Phone</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3" asp-for="PhoneNumber">
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Position</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3" asp-for="Position">
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">CCCD</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="CCCD">
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Preview</label>

                            <div class="col-sm-9">
                                <img src="~/@Model.Image" alt="Alternate Text" style="max-height:200px;max-width:200px" />
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Image</label>

                            <div class="col-sm-9">
                                <input type="file" asp-for="Image" />
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">UserName</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="UserName">
                            </div>
                            
                        </div>

                        <div class="form-group">
                            <div class="col-sm-3 "></div>
                            <div class="col-sm-9">
                                <button type="submit" class="btn btn-info btn-flat pull-left">Submit</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer"></div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>

