@{
    Layout = "/Views/Shared/_Layout.cshtml";
    @using InventoryManagement.Application.Dto.Products
}

@section HeadLinks {
    <script src="~/bower_components/ckeditor/ckeditor.js"></script>
}
@model CreateProductDto;

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Product
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a asp-controller="Product" asp-action="Index">Products</a></li>
        <li class="active class=" bg-info"">Add</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row alert">
        <!-- left column -->
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-success btn-flat" style="text-decoration:none"><i class="fa fa-list"></i> List</a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form asp-action="Create" method="post" class="form-horizontal" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 ">Title</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3" placeholder="Title" asp-for="Title">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">ProductCode</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3" placeholder="ProductCode" asp-for="ProductCode">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Category</label>

                            <div class="col-sm-9">
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Brand</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3" placeholder="Brand" asp-for="Brand">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Purchase Price</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3" placeholder="PurchasePrice" asp-for="PurchasePrice">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Minimum Price</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputPassword3" placeholder="MinimumPrice" asp-for="MinimumPrice">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Retail Price</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="RetailPrice" asp-for="RetailPrice">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Block Price</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" placeholder="BlockPrice" asp-for="BlockPrice">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Image</label>

                            <div class="col-sm-9">
                                <input type="file" asp-for="Image" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Description</label>

                            <div class="col-sm-9">   
                                <textarea id="editor1" rows="10" cols="80" asp-for="Description"></textarea>   
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 "></div>
                            <div class="col-sm-9">
                                <button type="submit" class="btn btn-info btn-flat pull-left">Submit</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer"></div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>

@section FootLinks {
    <!-- CK Editor -->
    <script>
        $(function () {
           
            CKEDITOR.replace('editor1');
            
        })
    </script>
}
