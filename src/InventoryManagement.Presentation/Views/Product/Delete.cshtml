@{
    Layout = "/Views/Shared/_Layout.cshtml";
    @using InventoryManagement.Application.Dto.Products
}

@section HeadLinks {
    @* <link rel="stylesheet" href="~/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css"> *@
    <script src="~/bower_components/ckeditor/ckeditor.js"></script>
}
@model ProductDto;

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Product
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a asp-controller="Product" asp-action="Index">Products</a></li>
        <li class="active class=" bg-info"">Add</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row alert">
        <!-- left column -->
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-success btn-flat" style="text-decoration:none"><i class="fa fa-list"></i> List</a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 ">Title</label>

                            <div class="col-sm-9">
                                <input type="text" disabled class="form-control" id="inputEmail3" placeholder="Title" asp-for="Title">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">ProductCode</label>

                            <div class="col-sm-9">
                                <input type="text" disabled class="form-control" placeholder="ProductCode" asp-for="ProductCode">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Category</label>

                            <div class="col-sm-9">
                                <input type="text" disabled class="form-control" placeholder="ProductCode" asp-for="Category.CategoryName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Brand</label>

                            <div class="col-sm-9">
                                <input type="text" disabled class="form-control" placeholder="Brand" asp-for="Brand">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Purchase Price</label>

                            <div class="col-sm-9">
                                <input type="text" disabled class="form-control" placeholder="PurchasePrice" asp-for="PurchasePrice">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Minimum Price</label>

                            <div class="col-sm-9">
                                <input type="text" disabled class="form-control" placeholder="MinimumPrice" asp-for="MinimumPrice">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Retail Price</label>

                            <div class="col-sm-9">
                                <input type="text" disabled class="form-control" placeholder="RetailPrice" asp-for="RetailPrice">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Block Price</label>

                            <div class="col-sm-9">
                                <input type="text" disabled class="form-control" placeholder="BlockPrice" asp-for="BlockPrice">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Image</label>

                            <div class="col-sm-9">
                                <img src="~/@Model.Image" alt="Alternate Text" style="max-height:200px;max-width:200px" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 ">Description</label>

                            <div class="col-sm-9">
                                <textarea id="editor1" disabled rows="10" cols="80" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 "></div>
                            <div class="col-sm-9">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                                    <button type="submit" class="btn btn-danger btn-flat pull-left">Confirm Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                
                    <!-- /.box-body -->
                    <div class="box-footer"></div>
                    <!-- /.box-footer -->
                </div>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>

@section FootLinks {
    <!-- CK Editor -->
    <!-- Bootstrap WYSIHTML5 -->
    @* <script src="~/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script> *@
    <script>
        $(function () {
            CKEDITOR.replace('editor1');
        })
    </script>
}
