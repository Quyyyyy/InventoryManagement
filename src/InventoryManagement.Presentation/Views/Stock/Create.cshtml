@{
    Layout = "/Views/Shared/_Layout.cshtml";
    @using InventoryManagement.Application.Dto
}


@model StockDto;

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Product
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a asp-controller="Category" asp-action="Index">Categories</a></li>
        <li class="active class=" bg-info"">Add</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row alert">
        <!-- left column -->
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-success btn-flat" style="text-decoration:none"><i class="fa fa-list"></i> List</a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form asp-action="Create" method="post" class="form-horizontal">
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 ">Product</label>

                            <div class="col-sm-9">
                                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Quantity</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3"  asp-for="StockQuantity">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 ">Unit</label>

                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="inputEmail3" asp-for="Unit">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 "></div>
                            <div class="col-sm-9">
                                <button type="submit" class="btn btn-info btn-flat pull-left">Submit</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer"></div>
                    <!-- /.box-footer -->
                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>
